<div class="show">
  <p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>URL:</strong>
  <%= @book.url %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@book.image.url, alt: 'Image') if @book.image? %>

</p>
</div>
